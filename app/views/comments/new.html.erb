<%= form_with model: @comment, url: user_post_comments_path, method: :post, local: true, scope: :comment do |form| %>
  <%= form.text_field :text, placeholder: 'Add Comments', class: "form-control form-control-lg mt-3" %>
  <%= form.submit "Create comment", class: "btn btn-dark center text-light m-2" %>
<% end %>
